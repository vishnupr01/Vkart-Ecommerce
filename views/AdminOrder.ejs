          <script>
            function statusUpdate(orderId, dropdownId,productId) {
              var selectedValue = document.getElementById(dropdownId).value;
              var endpoint = `/api/saveStatus`;

            

              fetch(endpoint, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                  selectedValue: selectedValue,
                  orderId: orderId,
                  productId:productId
                  // Add more data as needed
                }),
              })
                .then(function (response) {
                  if (response.ok) {
                    window.location.href = '/orderManage';
                  } else {
                    // Handle errors
                    console.error('Failed to proceed to payment:', response.statusText);
                  }
                })
                .catch(function (error) {
                  console.error('Error during fetch:', error);
                });
            }


