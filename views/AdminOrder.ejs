      </div>
      <div class="card mb-4">
        <header class="card-header">
          <div class="row gx-3">
            <div class="col-lg-4 col-md-6 me-auto">
              <input type="text" placeholder="Search..." class="form-control" />
            </div>
            <div class="col-lg-2 col-6 col-md-3">
              <select class="form-select">
                <option>Status</option>
                <option>Active</option>
                <option>Disabled</option>
                <option>Show all</option>
              </select>
            </div>
            <div class="col-lg-2 col-6 col-md-3">
              <select class="form-select">
                <option>Show 20</option>
                <option>Show 30</option>
                <option>Show 40</option>
              </select>
            </div>
          </div>
        </header>
        <!-- card-header end// -->
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#ID</th>
                  <th scope="col">Image</th>
                  <th scope="col">Name</th>
                  <th scope="col">Price</th>
                  <th scope="col">Qty</th>
                  <th scope="col">Status</th>
                  <th scope="col">Date</th>
                  <th scope="col" class="text-end">Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i < orderList.length; i++) { %>
                  <tr>
                    <td style="color: red;">
                      <%=orderList[i].userId %>
                    </td>
                    <td><img style="height: 100px;width: 100px;" src="<%=orderList[i].orderItems.image[0]  %>"></td>
                    <td><b>
                        <%= orderList[i].orderItems.pName %>
                      </b></td>
                    <td>
                      <%= orderList[i].orderItems.price %>
                    </td>
                    <td>
                      <%= orderList[i].orderItems.quantity %>
                    </td>

                    <%if(orderList[i].orderItems.orderStatus==="ordered"){  %>
                      <td><span id="orderStatus<%= i %>" class="badge rounded-pill alert-success  ">
                          <%= orderList[i].orderItems.orderStatus %>
                        </span></td>
                        <% } %>
                        <%if(orderList[i].orderItems.orderStatus==="Pending"){  %>
                          <td><span id="orderStatus<%= i %>" class="badge rounded-pill alert-warning  ">
                              <%= orderList[i].orderItems.orderStatus %>
                            </span></td>
                            <% } %>
                        <%if(orderList[i].orderItems.orderStatus==="Shipped"){  %>
                          <td><span id="orderStatus<%= i %>" class="badge rounded-pill alert-warning  ">
                              <%= orderList[i].orderItems.orderStatus %>
                            </span></td>
                            <% } %>
                        <%if(orderList[i].orderItems.orderStatus==="Canceled"){  %>
                          <td><span id="orderStatus<%= i %>" class="badge rounded-pill alert-danger  ">
                              <%= orderList[i].orderItems.orderStatus %>
                            </span></td>
                            <% } %>
                            <%if(orderList[i].orderItems.orderStatus==="Delivered"){  %>
                              <td><span id="orderStatus<%= i %>" class="badge rounded-pill alert-success ">
                                  <%= orderList[i].orderItems.orderStatus %>
                                </span></td>
                                <% } %>
                    <td>
                      <%= orderList[i].orderDate.split('T')[0].split('-').reverse().join('-') %>
                    </td>
                    <% if(orderList[i].orderItems.orderStatus==="ordered"||orderList[i].orderItems.orderStatus==="Shipped"||orderList[i].orderItems.orderStatus==="Pending"||orderList[i].orderItems.orderStatus==="Delivered"){ %>
                    <td class="text-end">

                      <div class="dropdown">

                        <select id="statusDropdown<%= i %>" class="form-select d-inline-block mb-lg-0 mr-5 mw-200">
                          <option>Change status</option>
                          <option>Pending</option>
                          <option>Shipped</option>
                          <option>Delivered</option>
                        </select>
                      </div>
                      <a onclick="statusUpdate('<%=orderList[i].orderItems._id %>','statusDropdown<%= i %>','<%=orderList[i].orderItems.productId%>')"
                        class="btn btn-md rounded font-sm">save</a>
                      <!-- dropdown //end -->
                    </td>
                    <% } %>
                    <td class="text-end">
                      <a href="/itemDetails?orderId=<%=orderList[i]._id  %>&productId=<%=orderList[i].orderItems.productId  %>"  style="background-color: rgb(27, 120, 21);"   aria-expanded="true" class="btn btn-md rounded  font-sm">Details</a>
                     
                      
                      <!-- dropdown //end -->
                  </td>
                  </tr>
                  <% } %>

              </tbody>
            </table>
          </div>
          <!-- table-responsive //end -->
        </div>
        <!-- card-body end// -->
