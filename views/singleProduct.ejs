    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const thumbnails = document.querySelectorAll('.img-thumbnail');
            let driftInstance;
            const mainImage = document.getElementById("main-image");
          
           

            driftInstance = new Drift(mainImage, {
                        paneContainer: document.querySelector('.lapClass'),
                        inlinePane: false,
                        containInline: true,
                        hoverBoundingBox: true,
                    });
    
            thumbnails.forEach(thumbnail => {
                thumbnail.addEventListener('click', function (event) {
                    event.preventDefault(); // Prevent the default behavior of the click event
    
                    console.log('Thumbnail clicked');
    
                    const targetImageId = this.getAttribute('data-target');
                    const zoomedImage = this.getAttribute('data-zoom');
    
                    // Update the main image source and data-zoom attribute
                    const mainImage = document.getElementById(targetImageId);
                    mainImage.setAttribute('src', zoomedImage);
                    mainImage.setAttribute('data-zoom', zoomedImage);
    
                    // Destroy previous Drift instance if it exists
                    if (driftInstance) {
                        driftInstance.destroy();
                        console.log('Previous Drift instance destroyed');
                    }
    
                    // Create a new Drift instance with the updated image
                    driftInstance = new Drift(mainImage, {
                        paneContainer: document.querySelector('.lapClass'),
                        inlinePane: false,
                        containInline: true,
                        hoverBoundingBox: true,
                    });
    
                    console.log('New Drift instance created');
                });
            });
        });
    </script>
