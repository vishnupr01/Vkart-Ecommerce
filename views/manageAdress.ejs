    <div class="containers">
        <% if(Address.length>0){ %>
      <h2 style="font-size: large; font-weight:bolder ;" >Your Addresses</h2>
      <% } %>
      
      <ul class="list-group address-list scrollist">
        <% for(var i = 0; i < Address.length; i++) { %>
          <!-- Duplicate the address item for each address -->
          <li class="list-group-item address-item">
              <div class="d-flex justify-content-between align-items-center" style="background-color: rgb(234, 227, 227);">
                  <div class="form-check" >
                      <input class="form-check-input" type="radio" name="defaultAddress" id="address1" checked>
                      <label class="form-check-label" for="address1">
                          <p><strong>Name:</strong> <%= Address[i].name %></p>
                          <p><strong>Address:</strong> <%= Address[i].Adress %>,<%= Address[i].locality %>, <%= Address[i].city%>,   <%= Address[i].state %>,  Pincode:<%= Address[i].pincode %> </p>
                          <p><strong>Phone:</strong> <%= Address[i].phone %></p>
                       
                      </label>
                  </div>
                  <div class="btn-group">
                    <a href="/deleteAdress?Aid=<%= Address[i]._id %>"><button style="background-color: black; border-bottom: black;" type="button" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button></a>
                      <a href="/editAddress?Aid=<%= Address[i]._id %>"><button type="button" class="btn btn-primary ms-1"><i class="fas fa-edit"></i></button></a>
                  </div>
              </div>
          </li>
          <!-- Add more address items as needed -->
          <% } %>
        
      </ul>
  

        <h2 style="font-size: large; font-weight:bolder ;" >Add New Address</h2>
        <form action="api/createAdress" method="post">
            <div class="mb-3">
                <% if( AdressName){ %>
                <p class="errorClass">
                    <%=  AdressName%>
                </p>
                <% } %>
                <label for="name" class="form-label">Name:</label>
                <input type="text" class="form-control" id="name" name="Adressname" >
            </div>

            <div class="mb-3">
                <% if(address){ %>
                <p class="errorClass">
                    <%=  address%>
                </p>
                <% } %>
                <label for="address" class="form-label">Address:</label>
                <textarea class="form-control" id="address" name="address" rows="4" ></textarea>
            </div>

            <div class="mb-3">
                <% if( phone){ %>
                <p class="errorClass">
                    <%=  phone%>
                </p>
                <% } %>
                <label for="phone" class="form-label">Phone:</label>
                <input type="tel" class="form-control" id="phone" name="phone" >
            </div>
            <div class="mb-3">
                <% if(pincode){ %>
                <p class="errorClass">
                    <%=  pincode%>
                </p>
                <% } %>
                <label for="pincode" class="form-label">Pincode:</label>
                <input type="text" class="form-control" id="pincode" name="pincode" >
            </div>
            
            <div class="mb-3">
                <% if(locality){ %>
                <p class="errorClass">
                    <%=  locality%>
                </p>
                <% } %>
                <label for="locality" class="form-label">Locality:</label>
                <input type="text" class="form-control" id="locality" name="locality" >
            </div>
            
            <div class="mb-3">
                <% if(state){ %>
                    <p class="errorClass">
                        <%=  state%>
                    </p>
                    <% } %>
               
                <label for="city" class="form-label">state:</label>
                <input type="text" class="form-control" id="city" name="city" >
            </div>
            
            <div class="mb-3">
                <% if(city){ %>
                <p class="errorClass">
                    <%=  city%>
                </p>
                <% } %>
                <label for="state" class="form-label">City:</label>
                <input type="text" class="form-control" id="state" name="state" >
            </div>
            

            <button type="submit" style="background-color: rgb(112, 106, 106);" class="btn btn-primary">Add Address</button>
        </form>
